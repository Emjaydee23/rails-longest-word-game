<h1>Start a new game</h1>

<% @letters.each do |letter| %>
<%= letter %>
<%end  %>

<form action="/score" method="post"
data-turbo="false">

<%= hidden_field_tag :authenticity_token,
form_authenticity_token %>

<%= hidden_field_tag 'letters', @letters %>


